@model CarFormViewModel

<h1 class="text-center mt-2">Add a new car</h1>
<div class="row mt-4 mb-4">
    <div id="card" class="card col-6 col-lg-3 game-card h-100 m-auto">
        <img id="card-image" src="/img/2576.jpg" class="card-img-top img-fluid card-image">
             <a href="http://www.freepik.com">Designed by vectorpocket / Freepik</a>

    </div>

    <form class="col-6 col-lg-9" method="post">
        <div class="form-group">
            <label for="model-input">Model</label>
            <input asp-for="Name" name="Name" type="text" class="form-control" id="model-input">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="year-input">Year</label>
            <input asp-for="Year" name="Year" type="number" class="form-control" id="year-input">
            <span asp-validation-for="Year" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label for="image-input">Image URL</label>
            <input asp-for="ImageUrl" name="ImageUrl" type="text" class="form-control" id="image-input">
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="plateNumber-input">Plate Number</label>
            <input asp-for="PlateNumber" name="plateNumber" type="text" class="form-control" id="plateNumber-input">
            <span asp-validation-for="PlateNumber" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-block btn-primary">Add Car</button>
    </form>
</div>

            @section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
